{
	"$schema": "https://biomejs.dev/schemas/2.3.9/schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"files": {
		"includes": ["client/src/**", "src/**"]
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"suspicious": {
				"noExplicitAny": "warn",
				"noUnknownAtRules": "off"
			},
			"style": {
				"useConst": "error",
				"useTemplate": "warn"
			}
		}
	},
	"overrides": [
		{
			"includes": ["src/**"],
			"linter": {
				"rules": {
					"correctness": {
						"useHookAtTopLevel": "off",
						"noUnusedPrivateClassMembers": "off"
					}
				}
			}
		}
	],
	"javascript": {
		"formatter": {
			"quoteStyle": "single",
			"semicolons": "always",
			"trailingCommas": "all"
		},
		"parser": {
			"unsafeParameterDecoratorsEnabled": true
		}
	},
	"assist": {
		"enabled": true,
		"actions": {
			"source": {
				"organizeImports": "on"
			}
		}
	}
}
