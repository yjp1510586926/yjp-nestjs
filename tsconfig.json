{
  "compilerOptions": {
    // 基础配置
    "target": "ES2021",
    "module": "commonjs",
    "lib": ["ES2021", "DOM"],

    // 模块解析
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "@modules/*": ["src/modules/*"],
      "@common/*": ["src/common/*"],
      "@config/*": ["src/config/*"]
    },
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    // 输出配置
    "outDir": "./dist",
    "declaration": true,
    "sourceMap": true,
    "removeComments": true,
    "incremental": true,

    // 类型检查
    "strict": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "strictBindCallApply": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,

    // NestJS 装饰器支持
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,

    // React 支持（前端和 SSR）
    "jsx": "react-jsx",

    // 其他
    "skipLibCheck": true
  },
  "include": ["src/**/*", "client/**/*"],
  "exclude": ["node_modules", "dist", "test", "**/*spec.ts"]
}
