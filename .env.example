# 应用配置
NODE_ENV=development
PORT=3000
APP_NAME="NestJS MPA Application"
APP_URL=http://localhost:3000

# 数据库配置 (PostgreSQL 示例)
DB_TYPE=postgres
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_DATABASE=nestjs_mpa
DB_SYNCHRONIZE=true
DB_LOGGING=false

# Redis 配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_TTL=3600

# JWT 认证配置
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-min-32-chars
JWT_EXPIRES_IN=1h
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production-min-32-chars
JWT_REFRESH_EXPIRES_IN=7d

# Session 配置
SESSION_SECRET=your-session-secret-key-change-this-in-production

# CORS 配置
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# 文件上传配置
MAX_FILE_SIZE=10485760
UPLOAD_DEST=./uploads

# 日志配置
LOG_LEVEL=debug
LOG_FILE_PATH=./logs

# 限流配置
THROTTLE_TTL=60
THROTTLE_LIMIT=10

# 邮件配置 (可选)
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USER=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_FROM=noreply@example.com

# 云存储配置 (可选)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_S3_BUCKET=

# 第三方服务 (可选)
SENTRY_DSN=
GOOGLE_ANALYTICS_ID=

# 前端构建配置
CLIENT_BUILD_PATH=./dist/client
PUBLIC_PATH=/static/

# API 配置
API_PREFIX=api
API_VERSION=v1

# 安全配置
BCRYPT_ROUNDS=10
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# 开发工具
SWAGGER_ENABLED=true
SWAGGER_PATH=api/docs

# 数据库配置 (AWS Aurora PostgreSQL)
DATABASE_URL="postgresql://username:password@your-aurora-endpoint.region.rds.amazonaws.com:5432/database_name?schema=public"
